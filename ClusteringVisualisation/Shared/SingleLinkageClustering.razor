@using Clustering.SingleLinkage.HtmlBuild

<div style="padding: 5px; width: 100%">
    <div class="box">

        @if (this.topCluster != null)
        {
            float topHeight = this.topCluster.Distance;
            for(int i = 1; i <= 5; i++)
            {
                <div class="number" style="bottom: @CssHelper.ToPercent((float)i / 5)">@((topHeight * i / 5).ToString("F2"))</div>
            }

            foreach (var line in GetDendrogramLines())
            {
                <div class="@line.GetClass()" style="@line.GetStyle()"></div>
            }
        }
    </div>
</div>
